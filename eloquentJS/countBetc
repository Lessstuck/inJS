function countBs(stringInput) {
    let count = 0;
    for (let i = 0; i < stringInput.length; i++)  {
        if (stringInput[i] == "B")    {
            count++;
        }
    }
    return count;
}

function countChar(stringInput, letter) {
    let count = 0;
    for (let i = 0; i < stringInput.length; i++)  {
        if (stringInput[i] == letter)    {
            count++;
        }
    }
    return count;
}

console.log(countChar("BBC", "C"));